# Translation Analysis Pipeline Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# API Keys (REQUIRED)
# ============================================================================

# Anthropic API key for Claude-based translation agents
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API key (OPTIONAL - only needed for OpenAI embeddings)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# Model Configuration
# ============================================================================

# Translation model to use for agents
# Options: claude-3-5-sonnet-20250929, claude-3-opus-20240229, claude-3-sonnet-20240229
TRANSLATION_MODEL=claude-3-5-sonnet-20250929

# Embedding model for vector distance calculation
# For sentence-transformers: all-MiniLM-L6-v2, all-mpnet-base-v2
# For OpenAI: text-embedding-3-small, text-embedding-3-large
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Use OpenAI for embeddings (true/false)
# If false, uses local sentence-transformers model (recommended)
USE_OPENAI_EMBEDDINGS=false

# ============================================================================
# Experiment Settings
# ============================================================================

# Default error rates to test (comma-separated percentages)
# Example: 0,10,25,35,50 tests 0%, 10%, 25%, 35%, and 50% error rates
DEFAULT_ERROR_RATES=0,10,25,35,50

# Random seed for reproducibility
# Use same seed to get consistent error introduction across runs
RANDOM_SEED=42

# ============================================================================
# Performance Tuning
# ============================================================================

# Maximum number of retry attempts for API calls
MAX_RETRIES=3

# Timeout for API calls (seconds)
TIMEOUT_SECONDS=30

# Enable API response caching (true/false)
# Caching can reduce costs but may use stale data
CACHE_ENABLED=true

# ============================================================================
# Output Settings
# ============================================================================

# Default output directory for results
OUTPUT_DIR=./results

# Graph DPI (resolution)
# 300 is publication quality, 150 for previews
GRAPH_DPI=300

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
